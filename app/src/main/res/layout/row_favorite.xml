<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/row_tx_tgl_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="08 Dec 2020 18:35"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/row_tx_nama_masjid"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="At-Takwa"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_tx_kabupaten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selong"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/row_tx_desa_masjid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sanggeng"
        android:textStyle="italic" />

</LinearLayout>